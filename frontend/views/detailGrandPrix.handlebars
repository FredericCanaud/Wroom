<table class="tabpayscir">
    {{#each listeGrandPrix}}
    <tr>
        <td><img class="drapeau" src="/image/pays/{{this.payadrdrap}}" alt="drapeau du pays" />
            <a href="/detailGrandPrix/{{this.gpnum}}"> {{this.gpnom}}</a>
        </td>
    </tr>
    {{/each}}
</table>
<p><strong> {{grandPrix.gpnom}}({{formatDate grandPrix.gpdate 'DD/MM/YYYY'}})  </strong> </p>
<table border="1">
    <tr>
        <th> Place </th>
        <th> Pilote </th>
        <th> Temps </th>
        <th> Nb points </th>
    </tr>
    {{#each resultat}}
    <tr>
        <td> {{this.Place}} </td>
        <td> {{this.pilnom}} {{this.pilprenom}} </td>
        <td> {{this.tempscourse}} </td>
        <td> {{this.ptnbpointsplace}} </td>
    </tr>
    {{/each}}
</table>
<p> {{grandPrix.gpcommentaire}} </p>
